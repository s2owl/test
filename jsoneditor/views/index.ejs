<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>JSON Data Editor</title>
    </head>
<body>
    <div class="container">
        <h1>JSON Data Editor</h1>

        <% if (message) { %>
            <div class="message <%= message.includes('Error') || message.includes('No file') || message.includes('Invalid') ? 'error' : '' %>">
                <%= message %>
            </div>
        <% } %>

        <h2>Add New Item</h2>
        <form action="/<%= appName %>/add" method="POST">
            <label for="newTitle">Title:</label>
            <input type="text" id="newTitle" name="title" required>

            <label for="newDescription">Description:</label>
            <textarea id="newDescription" name="description"></textarea>

            <button type="submit">Add Item</button>
        </form>

        <h2>Current Data</h2>
        <% if (data.length === 0) { %>
            <p>No data found. Add your first item above, or upload a JSON file.</p>
        <% } else { %>
            <% data.forEach(item => { %>
                <div class="item">
                    </div>
            <% }) %>
        <% } %>

        <div class="file-upload-section">
            </div>

    </div>

    </body>
</html>
